  "license": "MIT",
  "scripts": {
    "---------- build ----------": "---------- build ----------",
    "clean": "rimraf ./artifacts ./cache ./coverage ./types ./coverage.json && yarn typechain",
    "compile": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"test/**/*.ts\" && pnpm typechain",
    "---------- test ----------": "---------- test ----------",
    "test": "hardhat test",
    "fork-flare": "yarn hardhat node --fork https://flare-api.flare.network/ext/C/rpc --fork-block-number 20439751",
    "---------- live ----------": "---------- live ----------",
    "deploy": "yarn ts-node src/cli.ts deploy 10500 7776000 1000 2592000 -n flarefork",
    "init": "yarn ts-node src/cli.ts init 1000000000000000000000 1000000000000000000000 -n flarefork"
  },
  "devDependencies": {
    "@metamask/providers": "^13.1.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.9",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@typechain/ethers-v6": "^0.4.0",
    "@typechain/hardhat": "^8.0.0",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.0",
    "chai": "^4.3.7",
    "commander": "^12.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "hardhat": "^2.12.2",
    "hardhat-gas-reporter": "^1.0.9",
    "mocha": "^10.1.0",
    "rimraf": "^5.0.5",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.2",
    "typechain": "^8.2.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "ethers": "^6.4.0"
  },
  "packageManager": "yarn@3.6.4"
}
